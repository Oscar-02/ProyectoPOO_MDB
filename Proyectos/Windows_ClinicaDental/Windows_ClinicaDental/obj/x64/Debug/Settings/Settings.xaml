<Page
    x:Class="Windows_ClinicaDental.Settings.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Windows_ClinicaDental.Settings"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical" Margin="20" VerticalAlignment="Top" BorderBrush="Gray" BorderThickness="1"
                Background="{ThemeResource AppBarBackgroundThemeBrush}" CornerRadius="10">
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Configuracion de SQL Server" FontSize="30" FontWeight="SemiBold"/>
            <!--Seccion SQL Server-->
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <ComboBox x:ConnectionId='3' x:Name="cnnServerMode" Header="Modo de conexion al servidor"                                                  >
                    <x:String>Conexion Local</x:String>
                    <x:String>Conexion TCP/IP con puerto</x:String>
                </ComboBox>
                <TextBox x:ConnectionId='4' x:Name="cnnIPInfo" PlaceholderText="192.168.0.1; 127.0.0.1;" Margin="20,0,0,0" Width="192">
                    <TextBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xee77;" Margin="5,0,0,0"/>
                            <TextBlock Text="IP del servidor" Margin="5,0"/>
                        </StackPanel>
                    </TextBox.Header>
                </TextBox>
                <TextBox x:ConnectionId='5' x:Name="cnnPortInfo" PlaceholderText="1433" Margin="20,0,0,0">
                    <TextBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xe839;" VerticalAlignment="Center"/>
                            <TextBlock Text="Puerto del servidor" Margin="5,0"/>
                        </StackPanel>
                    </TextBox.Header>
                </TextBox>
                <ComboBox x:ConnectionId='6' x:Name="cnnLoginMode" Header="Modo de inicio de sesion" Margin="20,0,0,0"
                                                                      >
                    <x:String>Autenticacion de Windows</x:String>
                    <x:String>Sesion de SQL Server</x:String>
                </ComboBox>
                <TextBox x:ConnectionId='7' x:Name="cnnSqlUser" PlaceholderText="sa; UserAccount" Margin="20,0,0,0" Width="192">
                    <TextBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xf081;" Margin="5,0,0,0"/>
                            <TextBlock Text="Nombre de Usuario" Margin="10,0"/>
                        </StackPanel>
                    </TextBox.Header>
                </TextBox>
                <PasswordBox x:ConnectionId='8' x:Name="cnnSqlPwd" Margin="20,0,0,0" Width="192" IsPasswordRevealButtonEnabled="True">
                    <PasswordBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xe72e;" Margin="5,0,0,0"/>
                            <TextBlock Text="Contraseña" Margin="5,0"/>
                        </StackPanel>
                    </PasswordBox.Header>
                </PasswordBox>
            </StackPanel>
            <Button x:ConnectionId='2' x:Name="cnnTest" Style="{StaticResource AccentButtonStyle}"
                                      Margin="0,15">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xe701;"/>
                        <TextBlock Text="Probar conexion" Margin="10,0,0,0"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </StackPanel>
</Page>

